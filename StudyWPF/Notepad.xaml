<Window x:Class="StudyWPF.Notepad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyWPF"
        mc:Ignorable="d"
        Title="Notepad" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height=" 20"/>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition Height="20"/>

        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
            <Button  Width="70" Height="20" Content="文件"/>
            <Button  Width="70" Height="20" Content="编辑"/>
            <Button  Width="70" Height="20" Content="查看"/>
            <Button  Width="70" Height="20" Content="外观"/>
            <Button  Width="70" Height="20" Content="设置"/>
            <Button  Width="70" Height="20" Content="设置"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal">
            <Button  Width="20" Height="20" Content="1"/>
            <Button  Width="20" Height="20" Content="2"/>
            <Button  Width="20" Height="20" Content="3"/>
            <Button  Width="20" Height="20" Content="4"/>
            <Button  Width="20" Height="20" Content="5"/>
            <Button  Width="20" Height="20" Content="6"/>
        </StackPanel>
        <Grid Grid.Column="0" Grid.Row="2" ShowGridLines="True">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="70"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0">
                <Button Height="20" Content="1"/>
                <Button Height="20" Content="2"/>
                <Button Height="20" Content="3"/>
                <Button Height="20" Content="4"/>
            </StackPanel>
            <TextBox Grid.Row="0" Grid.Column="1" TextWrapping="Wrap"/>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Grid.Row="0" Content="行8/11"/>
            <Button Grid.Column="1" Grid.Row="0" Content="列3/1"/>
            <Button Grid.Column="2" Grid.Row="0" Content="字符3/2"/>
            <Button Grid.Column="3" Grid.Row="0" Content="求职--"/>
            <Button Grid.Column="4" Grid.Row="0" Content="选定--"/>
            <Button Grid.Column="5" Grid.Row="0" Content="匹配--"/>
            <Button Grid.Column="6" Grid.Row="0" Content="行8/11"/>
            <Button Grid.Column="7" Grid.Row="0" Content="求职--"/>
            <Button Grid.Column="8" Grid.Row="0" Content="选定--"/>
            <Button Grid.Column="9" Grid.Row="0" Content="匹配--"/>
            <Button Grid.Column="10" Grid.Row="0" Content="行8/11"/>

        </Grid>


    </Grid>
</Window>
